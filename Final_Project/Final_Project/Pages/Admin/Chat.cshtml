@page
@model Final_Project.Pages.Admin.ChatModel
@{
    Layout = "_AdminLayout";
}
<div class="content">
    <div class="col-lg-12">
        <div class="row chat-window">

            <div class="col-lg-7 col-xl-8 chat-cont-right">

                <div class="card mb-0">
                    <div class="card-header msg_head">
                        <div class="d-flex bd-highlight">
                            <a id="back_user_list" href="javascript:void(0)" class="back-user-list">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                            <div class="img_cont">
                                <img class="rounded-circle user_img" src="../adminassets/img/customer/profile2.jpg" alt="">
                            </div>
                            <div class="user_info">
                                <span><strong></strong></span>
                                <p class="mb-0">Messages</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body msg_card_body chat-scroll">
                        <ul class="list-unstyled" id="messagesList">
                            
                        </ul>
                    </div>
                    <div class="card-footer">
                        <div class="input-group">
                            <input type="text" id="user" hidden value="Admin">
                            <input id="message" class="form-control type_msg mh-auto empty_check" placeholder="Type your message...">
                            <button id="sendMessage" class="btn btn-primary btn_send"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="searchpart">
    <div class="searchcontent">
        <div class="searchhead">
            <h3>Search </h3>
            <a id="closesearch"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
        </div>
        <div class="searchcontents">
            <div class="searchparts">
                <input type="text" placeholder="search here">
                <a class="btn btn-searchs">Search</a>
            </div>
            <div class="recentsearch">
                <h2>Recent Search</h2>
                <ul>
                    <li>
                        <h6><i class="fa fa-search me-2"></i> Settings</h6>
                    </li>
                    <li>
                        <h6><i class="fa fa-search me-2"></i> Report</h6>
                    </li>
                    <li>
                        <h6><i class="fa fa-search me-2"></i> Invoice</h6>
                    </li>
                    <li>
                        <h6><i class="fa fa-search me-2"></i> Sales</h6>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>