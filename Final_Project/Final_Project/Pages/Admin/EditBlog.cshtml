@page
@model Final_Project.Pages.Admin.EditBlogModel
@using Final_Project.Models;
@{
    Layout = "_AdminLayout";
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Edit Blog</h4>
            <h6>Edit a Blog</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-page="EditBlog" method="post">
                <input hidden asp-for="id" value="@Model.blog.Id" />
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" asp-for="blog.Title" value="@Model.blog.Title">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Auther</label>
                            <input type="text" asp-for="blog.Author" value="@Model.blog.Author">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>ShortContent</label>
<textarea class="form-control" asp-for="blog.ShortContent" value="@Model.blog.ShortContent"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Content</label>
<textarea class="form-control" asp-for="blog.Content" value="@Model.blog.Content"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label> Blog Image</label>
                            <input type="text" asp-for="blog.Image" value="@Model.blog.Image">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>PublishDate</label>
                            <input type="date" asp-for="blog.PublishDate" value="@Model.blog.Image">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input type="submit" value="Edit" class="btn btn-submit me-2" />
                        <a asp-page="BlogList" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>