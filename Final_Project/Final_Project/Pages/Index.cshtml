@page
@model IndexModel
@using Final_Project.Models;
@{
    ViewData["Title"] = "Home page";
}

<div class="popular-items pt-50">
    <div class="container-fluid">
        <h1 style="text-align: center;
                    margin-bottom: 30px;">
            Category
        </h1>
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                Category category1 = (Category) category;
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <div class="popular-img">
                            <img style="height:33rem;" src="@category1.Image" alt="">
                            <div class="img-cap">
                                <span>@category1.Name</span>
                            </div>
                            <div class="favorit-items">
                                <a href="shop.html" class="btn">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="new-arrival">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle mb-60 text-center wow fadeInUp" data-wow-duration="2s" data-wow-delay=".2s">
                    <h2>product<br>popular</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var product in Model.Products)
            {
                Product product1 = (Product)product;
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                    <div class="single-new-arrival mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <div class="popular-img">
                            <img style="height:40rem;" src="@product1.Image" alt="">
                            <div class="favorit-items">

                                <img src="assets/img/gallery/favorit-card.png" alt="">
                            </div>
                        </div>
                        <div class="popular-caption">
                            <h3><a asp-page="ProductDetail" asp-route-id="@product1.Id">@product1.Name</a></h3>
                            <div class="rating mb-10">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <span>$ @product1.Price .00</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row justify-content-center">
            <div class="room-btn">
                <a asp-page="Products" class="border-btn">Browse More</a>
            </div>
        </div>
    </div>
</div>

<div class="popular-product pt-50">
    <div class="container-fluid">
        <div class="row">
            @foreach(var blog in Model.Blogs)
            {
                Blog blog1 = (Blog)blog;
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="single-product mb-50">
                        <div class="location-img">
                            <img src="@blog1.Image" alt="">
                        </div>
                        <div class="location-details">
                            <p><a href="product_details.html">@blog1.Title</a></p>
                            <a asp-page="Blogs" class="btn">Read More</a>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
